<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crave.food.csse_android_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.OrderUpdateSitemanager"></activity>
        <activity android:name=".activities.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SupplierLoggedActivity" />
        <activity android:name=".activities.ManagerLoggedActivity" />
        <activity android:name=".activities.Login" />
        <activity android:name=".activities.SupplierRegistration" />
        <activity android:name=".OrderViewSitemanager" />
        <activity android:name=".OrderPlaceSitemanager" />
        <activity android:name=".OrderViewSupplier" />
        <activity android:name=".OrderRespondSupplier" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>